graph = JSON.parse(`
<%= json %>
`);

// ------------------------------------------------
const cy = cytoscape({
  container: document.getElementById('cy'),
  elements: ([...graph.nodes, ...graph.edges]).map(x => ({data: x})),
  style: [
    {
      selector: 'node',
      style: {
        'label': (e) => e.id().split("/")[1],
        'color': '#fff',
        'text-valign': 'center',
        'text-halign': 'center',
        'font-size': '14px',
        'shape': 'roundrectangle',
        'width': (e) => Math.max(50, e.id().split("/")[1].length * 10),
      }
    },
    {
      selector: 'edge',
      style: {
        'width': 1,
        'line-color': '#ccc',
        'target-arrow-color': '#ccc',
        'target-arrow-shape': 'triangle',
        'curve-style': 'bezier',
      }
    },
    {
      selector: 'node[cache="hit"]',
      style: {'background-color': 'green'}
    },
    {
      selector: 'node[cache="missed"]',
      style: {'background-color': '#ff6f00'}
    },
    {
      selector: 'node[type="agg"]',
      style: {
        'font-weight': 'bold',
        'background-color': '#333',
      }
    },
    {
      selector: 'node[cache="ignored"]',
      style: {
        'background-color': '#888',
      }
    },
  ],
  layout: {
    name: 'breadthfirst',
    directed: true,
  }
});
